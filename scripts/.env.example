# ==== Core Cluster Info ====
CLUSTER_NAME=pve-cluster01
NODE_NAME=pve01

# ==== Mesh IPs per Host ====
MESH_IPV6_MAP="pve01=fd42:42::1 pve02=fd42:42::2 pve03=fd42:42::3"
MESH_IPV4_MAP="pve01=10.10.10.1 pve02=10.10.10.2 pve03=10.10.10.3"

# ==== Thunderbolt Interfaces per Host ====
# Two interfaces listed comma-separated per host
TB_IFACES_MAP="pve01=enp0s0f0,enp0s0f1 pve02=enp0s0f2,enp0s0f3 pve03=enp0s0f4,enp0s0f5"

# ==== Corosync Dual-Ring IPs ====
RING0_MAP="pve01=fd42:42::1 pve02=fd42:42::2 pve03=fd42:42::3"
RING1_MAP="pve01=10.10.10.1 pve02=10.10.10.2 pve03=10.10.10.3"

# ==== Ceph Settings ====
CEPH_PUBLIC_NETWORK=fd42:42::/64
CEPH_MDS_HOSTS="pve01 pve02 pve03"
CEPH_MON_HOSTS="pve01 pve02 pve03"

# ==== FRR/BGP Peers ====
BGP_ASN=65001
BGP_PEERS_IPV6="fd42:42::2 fd42:42::3"
BGP_PEERS_IPV4="10.10.10.2 10.10.10.3"

# ==== DNS (Optional) ====
DNS_SEARCH="ad.famille-clerc.com famille-clerc.com"
DNS_FORWARDERS="10.1.1.1 10.1.1.2"

# ==== Cluster Join (Optional) ====
PVE_MASTER=pve01
JOIN_TOKEN=abcdef123456
